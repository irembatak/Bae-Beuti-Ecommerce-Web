@model Product
@{
}
<div class="row">
    <div class="col-md-4 text-center">
        <img src="/products/@Model.ProductImageName" class="img-fluid mb-3" alt="..." width="250" />
    </div>
    <div class="col-md-8">
        <h3 class="mb-3">@Model.ProductName</h3>
        <h3 class="mb-3">@(Model.ProductPrice)$</h3>
        <button type="button" class="btn btn-warning btn-sm" onclick="addToCart(this, @Model.ProductId)">
            Add to Cart <i class="bi bi-cart4"></i>
        </button>

        <hr />

        <div class="row mb-3">
            <div class="col-sm-3 fw-bold">
                Brand
            </div>
            <div class="col-sm-9">
                @Model.ProductBrand
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-sm-3 fw-bold">
                Category
            </div>
            <div class="col-sm-9">
                @Model.ProductCategory
            </div>
        </div>


        <div class="fw-bold">Description</div>
        <div style="white-space: pre-line">@Model.ProductDescription</div>
    </div>
</div>
